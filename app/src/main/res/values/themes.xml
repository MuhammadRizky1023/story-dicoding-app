<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_blue</item>
        <item name="colorSecondaryVariant">@color/color_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.StoryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LoadingProgressBar" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="checkBox" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <style name="textView" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button" parent="Theme.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="frameLayout" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="imageView" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="customView" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RecyclerView" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SwipeRefreshLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="imageList" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:transitionName">imageDetail</item>
    </style>

    <style name="cardView" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="appCompatButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="floatingButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="borderWidth">-10dp</item>
        <item name="fabSize">mini</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="imageDetail" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxHeight">400dp</item>
    </style>

    <style name="linearLayoutForm" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="addImage" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/boarder_line</item>
        <item name="android:src">@drawable/ic_image</item>
    </style>
    <style name="addTitleName">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="addDesc" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="maxWidth">350dp</item>
        <item name="maxHeight">200dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:padding">15dp</item>
        <item name="android:hint">Description</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="tvTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewMap" parent="ThemeOverlay.AppCompat" >
        <item name="android:layout_height">500dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    
    <style name="textViewLocation" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:text">@string/your_location</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="buttonLocation">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="floatingMapButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="imageViewLocation" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
    <style name="Theme.StoryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.StoryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>